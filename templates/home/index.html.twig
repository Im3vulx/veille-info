	<section class="hero-banner">
		<div class="container">
			<div>
				<h1>
					Votre veille technologique personnalisée
				</h1>
				<p>
					Découvrez les dernières actualités et tendances dans le domaine de la programmation, des jeux vidéo, de l'espace, du sport et plus encore.
				</p>
				<div>
					<a href="{{ path('app_category') }}">
						Explorer les catégories
					</a>
				</div>
			</div>
		</div>
	</section>

	<section class="featured-article">
		<div class="container">
			<div class="section-header">
				<h2>
					À la une
				</h2>
			</div>

			<div class="featured-grid">
				<div class="featured-highlight">
					<a href="#" class="highlight">
						<div>
							<img src="https://images.pexels.com/photos/546819/pexels-photo-546819.jpeg" alt="Article à la une" class="highlight-img"/>
						</div>
						<div class="highlight-overlay"></div>
						<div class="highlight-content">
							<span class="custom-badge">
								Programmation
							</span>
							<h3 class="highlight-title">Les dernières avancées en intelligence artificielle</h3>
							<p class="highlight-desc">Découvrez comment l'IA transforme notre quotidien et révolutionne les industries.</p>
						</div>
					</a>
				</div>

				<div>
					<div class="info-box">
						<h3 class="info-title">
							Découvrez notre plateforme
						</h3>
						<p class="info-text">
							Neurogameron est votre source d'informations pour rester à jour sur les dernières tendances programmations, l'innovation dans les jeux vidéo, les avancées spatiales, les performances sportives et plus encore.
						</p>
						<div>
							<div class="info-point">
								<div class="info-number">
									1
								</div>
								<div>
									<p class="custom-title">Articles curatés</p>
									<p class="custom-subtitle">Articles sélectionnés par nos experts</p>
								</div>
							</div>
							<div class="info-point">
								<div class="info-number">
									2
								</div>
								<div>
									<p class="custom-title">Catégories diverses</p>
									<p class="custom-subtitle">De multiples domaines couverts</p>
								</div>
							</div>
							<div class="info-point">
								<div class="info-number">
									3
								</div>
								<div>
									<p class="custom-title">Personnalisation</p>
									<p class="custom-subtitle">Contenu adapté à vos intérêts</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section class="recent-articles">
		<div class="container">
			<div class="section-header">
				<h2>Articles récents</h2>
				<a href="{{ path('app_articles') }}" class="link-colored">
					Voir tous les articles
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M9 18l6-6-6-6"/>
					</svg>
				</a>
			</div>

			<div class="articles-grid">
				{% if latestArticles is empty %}
					<div class="empty-state">
						<div class="empty-icon">
							<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewbox="0 0 16 16">
								<path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
								<path d="M7 5.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 1 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0zM7 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm-1.496-.854a.5.5 0 0 1 0 .708l-1.5 1.5a.5.5 0 0 1-.708 0l-.5-.5a.5.5 0 0 1 .708-.708l.146.147 1.146-1.147a.5.5 0 0 1 .708 0z"/>
							</svg>
						</div>
						<h3>Aucun article disponible</h3>
						<p>Il n'y a pas encore d'articles publiés. Revenez bientôt !</p>
					</div>
				{% else %}
					{% for article in latestArticles %}
						<article class="article-card">
							{% if article.imageUrl %}
								<div class="article-image">
									<img src="{{ article.imageUrl }}" alt="{{ article.title }}" loading="lazy">
								</div>
							{% endif %}

							<div class="article-content">
								<div class="article-meta">
									<span class="article-category">{{ article.category.name }}</span>
									<span class="article-date">{{ article.createdAt|date('d/m/Y') }}</span>
								</div>

								<h2 class="article-title">
									<a href="{{ path('app_article_show', {id: article.id}) }}">{{ article.title }}</a>
								</h2>

								<p class="article-summary">{{ article.summary|length > 150 ? article.summary|slice(0, 150) ~ '...' : article.summary }}</p>

								<div class="article-footer">
									{% if article.authorName is not empty %}
										<span class="article-author">Par
											{{ article.authorName }}</span>
									{% endif %}
									<a href="{{ path('app_article_show', {id: article.id}) }}" class="read-more">
										Lire la suite
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewbox="0 0 16 16">
											<path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
										</svg>
									</a>
								</div>
							</div>
						</article>
					{% endfor %}
				{% endif %}
			</div>
		</div>
	</section>

	<section class="category-section">
		<div class="container">
			<div class="section-header">
				<h2>Explorer par catégorie</h2>
				<a href="{{ path('app_category') }}" class="link-colored">
					Toutes les catégories
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M9 18l6-6-6-6"/>
					</svg>
				</a>
			</div>

			<div class="categories-grid">
				{% for category in categories %}
					<a href="{{ path('app_category_show', {id: category.id}) }}" class="category-tile">
						<div>
							<div class="category-icon">
								{{ icons[category.iconName]|default('<svg xmlns="http://www.w3.org/2000/svg" ...>...</svg>')|raw }}
							</div>
							<h3>{{ category.name }}</h3>
						</div>
					</a>
				{% endfor %}
			</div>
		</div>
	</section>

	<section class="newsletter">
		<div class="newsletter-container">
			<h2 class="newsletter-title">Restez informé</h2>
			<p class="newsletter-description">
				Abonnez-vous à notre newsletter pour recevoir les derniers articles et mises à jour directement dans votre boîte mail.
			</p>
			<form class="newsletter-form">
				<div class="newsletter-fields">
					<input type="email" placeholder="Votre adresse email" required/>
					<button type="submit">S'abonner</button>
				</div>
				<p class="newsletter-note">
					Nous respectons votre vie privée. Désabonnez-vous à tout moment.
				</p>
			</form>
		</div>
	</section>

	{% include 'footer.html.twig' %}
{% endblock %}
