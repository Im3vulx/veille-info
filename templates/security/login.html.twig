{% extends 'base.html.twig' %}

{% block title %}Neurogameron - Connexion
{% endblock %}

{% block body %}
	<div class="login-container">
		<div class="login-box">
			<h2 class="login-title">Connexion</h2>
			<p class="login-subtitle">
				Ou
				<a href="{{ path('app_registration') }}">créer un nouveau compte</a>
			</p>

			{% if error %}
				<div class="login-error">
					⚠️
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}

			{% if app.user %}
				<div
					class="login-info">
					{# Vous êtes connecté en tant que {{ app.user.userIdentifier }},  #}
					Vous êtes connecté en tant que,
					<a href="{{ path('app_logout') }}">Déconnexion</a>
				</div>
			{% endif %}

			<form method="post" action="{{ path('app_login_check' )}}" class="login-form" data-turbo="false">
				<label for="username">Adresse email</label>
				<input type="email" name="_username" id="username" value="{{ last_username }}" required autocomplete="email">

				<label for="password">Mot de passe</label>
				<input type="password" name="_password" id="password" required autocomplete="current-password">

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="login-remember">
					<input type="checkbox" id="_remember_me" name="_remember_me">
					<label for="_remember_me">Se souvenir de moi</label>
				</div>

				<button type="submit">Se connecter</button>
			</form>
		</div>
	</div>

	{% include 'footer.html.twig' %}
{% endblock %}
