{% extends 'admin/admin_layout.html.twig' %}

{% block admin_content %}
	<turbo-frame id="admin-content">
		<section id="articlegest" data-controller="adminarticles" data-admindashboard-target="section" data-section="articles" class="dashboard-section">
			<div class="top">
				<h2>Gestion des articles</h2>
				<button>+ Nouvel article</button>
			</div>
			<div class="filters">
				<div class="filter-item">
					<input type="text" placeholder="Rechercher des articles..." data-adminarticles-target="search" data-action="input->adminarticles#filter">

					<select data-adminarticles-target="status" data-action="change->adminarticles#filter">
						<option value="all">Tous les statuts</option>
						<option value="published">Publié</option>
						<option value="draft">Brouillon</option>
					</select>

					<select data-adminarticles-target="category" data-action="change->adminarticles#filter">
						<option value="all">Toutes les catégories</option>
						{% for category in categories %}
							<option value="{{ category.id }}">{{ category.name }}</option>
						{% endfor %}
					</select>
				</div>
			</div>

			<table class="articles-table">
				<thead>
					<tr>
						<th>Titre</th>
						<th>Catégorie</th>
						<th>Date</th>
						<th>Statut</th>
						<th>Actions</th>
					</tr>
				</thead>

				<tbody data-adminarticles-target="table">
					{% for article in articles %}
						<tr data-title="{{ article.title|lower }}" data-category="{{ article.category.id }}" data-status="{{ article.published ? 'published' : 'draft' }}">
							<td class="title">
								<div>
									{% if article.imageUrl is not empty %}
										<img src="{{ article.imageUrl }}" alt="{{ article.title }}" loading="lazy">
									{% else %}
										<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 640 640"><path d="M160 96C124.7 96 96 124.7 96 160L96 480C96 515.3 124.7 544 160 544L480 544C515.3 544 544 515.3 544 480L544 160C544 124.7 515.3 96 480 96L160 96zM224 176C250.5 176 272 197.5 272 224C272 250.5 250.5 272 224 272C197.5 272 176 250.5 176 224C176 197.5 197.5 176 224 176zM368 288C376.4 288 384.1 292.4 388.5 299.5L476.5 443.5C481 450.9 481.2 460.2 477 467.8C472.8 475.4 464.7 480 456 480L184 480C175.1 480 166.8 475 162.7 467.1C158.6 459.2 159.2 449.6 164.3 442.3L220.3 362.3C224.8 355.9 232.1 352.1 240 352.1C247.9 352.1 255.2 355.9 259.7 362.3L286.1 400.1L347.5 299.6C351.9 292.5 359.6 288.1 368 288.1z"/></svg>
									{% endif %}
									{{ article.title }}
								</div>
							</td>
							<td>{{ article.category.name }}</td>
							<td>{{ article.createdAt|date('d/m/Y') }}</td>
							<td>{{ article.published ? 'Publié' : 'Brouillon' }}</td>
							<td>
								<a class="show-link" href="{{ path('admin_article_show', {'id': article.id}) }}">
									<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 640 640"><path d="M320 96C239.2 96 174.5 132.8 127.4 176.6C80.6 220.1 49.3 272 34.4 307.7C31.1 315.6 31.1 324.4 34.4 332.3C49.3 368 80.6 420 127.4 463.4C174.5 507.1 239.2 544 320 544C400.8 544 465.5 507.2 512.6 463.4C559.4 419.9 590.7 368 605.6 332.3C608.9 324.4 608.9 315.6 605.6 307.7C590.7 272 559.4 220 512.6 176.6C465.5 132.9 400.8 96 320 96zM176 320C176 240.5 240.5 176 320 176C399.5 176 464 240.5 464 320C464 399.5 399.5 464 320 464C240.5 464 176 399.5 176 320zM320 256C320 291.3 291.3 320 256 320C244.5 320 233.7 317 224.3 311.6C223.3 322.5 224.2 333.7 227.2 344.8C240.9 396 293.6 426.4 344.8 412.7C396 399 426.4 346.3 412.7 295.1C400.5 249.4 357.2 220.3 311.6 224.3C316.9 233.6 320 244.4 320 256z"/></svg>
								</a>
								<a class="edit-link" href="{{ path('admin_article_edit', {'id': article.id}) }}">
									<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 640 640"><path d="M535.6 85.7C513.7 63.8 478.3 63.8 456.4 85.7L432 110.1L529.9 208L554.3 183.6C576.2 161.7 576.2 126.3 554.3 104.4L535.6 85.7zM236.4 305.7C230.3 311.8 225.6 319.3 222.9 327.6L193.3 416.4C190.4 425 192.7 434.5 199.1 441C205.5 447.5 215 449.7 223.7 446.8L312.5 417.2C320.7 414.5 328.2 409.8 334.4 403.7L496 241.9L398.1 144L236.4 305.7zM160 128C107 128 64 171 64 224L64 480C64 533 107 576 160 576L416 576C469 576 512 533 512 480L512 384C512 366.3 497.7 352 480 352C462.3 352 448 366.3 448 384L448 480C448 497.7 433.7 512 416 512L160 512C142.3 512 128 497.7 128 480L128 224C128 206.3 142.3 192 160 192L256 192C273.7 192 288 177.7 288 160C288 142.3 273.7 128 256 128L160 128z"/></svg>
								</a>
								<a href="{{ path('admin_article_delete', {'id': article.id}) }}" class="delete-link">
									<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 640 640"><path d="M232.7 69.9C237.1 56.8 249.3 48 263.1 48L377 48C390.8 48 403 56.8 407.4 69.9L416 96L512 96C529.7 96 544 110.3 544 128C544 145.7 529.7 160 512 160L128 160C110.3 160 96 145.7 96 128C96 110.3 110.3 96 128 96L224 96L232.7 69.9zM128 208L512 208L512 512C512 547.3 483.3 576 448 576L192 576C156.7 576 128 547.3 128 512L128 208zM216 272C202.7 272 192 282.7 192 296L192 488C192 501.3 202.7 512 216 512C229.3 512 240 501.3 240 488L240 296C240 282.7 229.3 272 216 272zM320 272C306.7 272 296 282.7 296 296L296 488C296 501.3 306.7 512 320 512C333.3 512 344 501.3 344 488L344 296C344 282.7 333.3 272 320 272zM424 272C410.7 272 400 282.7 400 296L400 488C400 501.3 410.7 512 424 512C437.3 512 448 501.3 448 488L448 296C448 282.7 437.3 272 424 272z"/></svg>
								</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<div class="pagination" data-adminarticles-target="pagination"></div>

		</section>
	</turbo-frame>
{% endblock %}
